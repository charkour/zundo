{
  "extends": "../tsconfig.json",
  "include": ["**/*.ts", "**/*.tsx", "**/*.mjs", "__mocks__/zustand/global.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": "../",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
  }
}
